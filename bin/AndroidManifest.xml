<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hariharaknarayanan.MemoryGame"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/flagsicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hariharaknarayanan.MemoryGame.StartActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hariharaknarayanan.MemoryGame.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.hariharaknarayanan.MemoryGame.GameActivity"
            android:label="@string/title_activity_game" 
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            >
            
        </activity>
        <activity
            android:name="com.hariharaknarayanan.MemoryGame.ResultsActivity"
            android:label="@string/title_activity_results"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.hariharaknarayanan.MemoryGame.LeaderboardActivity"
            android:label="@string/title_activity_leaderboard"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
